<div class="container-fluid organization-profile">

<div class="row">
  <div class="col-sm-8">
  <div class="calendar main-bio">
                        <%= link_to "Edit Profile", edit_user_registration_path %>

           <h1><%= current_user.name %></h1>

           <div class="underline"></div>
           <br>
              <center>
              <%= image_tag current_user.image.url(:medium), :class=> "profile-pic" %>
              </center>
              <br>
              <h1>Our mission</h1>
              <div class = "underline"></div>
              <br>
          <p><%= current_user.biographical_information %></p>
          </h3>
      </div>
   </div>
      <div class="col-sm-4">
        <div class="calendar">
          <h1>Contact Information</h1>
          <div class="underline-red"></div>
          <br>
          <% if (current_user.address.present? ) %>
          <p>
            <strong>Address:</strong>
          <%= current_user.address %>
          </p>
          <% end %>

          <p>
            <strong>Email:</strong>
          <%= current_user.email %>
          </p>

          <% if (current_user.phone_number.present? ) %>
          <p>
            <strong>Phone:</strong>
          <%= current_user.phone_number %>
          </p>
          <% end %>
          <% if (current_user.website.present? ) %>
          <p>
            <strong>Website:</strong>
          <%= current_user.website %>
          </p>
          <% end %>
     </div>
     <br>
     <div class="calendar">
  
          <h1>About <%= current_user.name %></h1>
          <div class="underline-red"></div>
          <br>
          <p><%= current_user.about1 %></p>
        </div>
 </div><!--sm-4-->
</div><!--row-->
<br>

<% if (user_signed_in?) && (not current_user.volunteer?) %>
<div class="calendar3">
   <h1>All Your Volunteer Opportunities</h1>
   <div class="underline-purple"></div>

  <br>

<table class= "table table-responsive">
  <thead>
    <tr>
      <th>Position</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @volunteer_opportunities.each do |volunteer_opportunity| %>
      <tr>
        <td><%= volunteer_opportunity.Organization %></td>
        <td><%= volunteer_opportunity.Address %></td>
        <td><%= volunteer_opportunity.Phone %></td>
        <td><%= volunteer_opportunity.Website %></td>
        <td><%= link_to 'View', volunteer_opportunity, class: "btn btn-success" %>
        <% if (user_signed_in?) && (current_user == volunteer_opportunity.user) %>
        <%= link_to 'Edit', edit_volunteer_opportunity_path(volunteer_opportunity), class: "btn btn-success" %>
        <%= link_to 'Delete', volunteer_opportunity, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<br>
<% end %>
</div>
<br>
</div>

