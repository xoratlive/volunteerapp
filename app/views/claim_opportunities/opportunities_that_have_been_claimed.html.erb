<div class="container-fluid organization-profile">

    <div class="row">
      <div class="col-md-8 main-bio">
           <div class="calendar">
             <%= link_to "Edit your profile", edit_user_registration_path %>
            <h1><%= current_user.name %>'s Profile</h1>
            <div class="underline"></div>
                 
          <br>
          <center>
          <%= image_tag current_user.image.url(:medium), :class=> "profile-pic" %>
          </center>
        </div><!--calendar-->
      </div><!--col-md-8-->
      <div class="col-md-4">
        <div class="calendar">
          <h1>Contact Information</h1>
          <div class="underline-red"></div>
          <p>
          <% if (current_user.address.present? ) %>
            <strong>Address:</strong>
          <%= current_user.address %>
          </p>
          <% end %>

          <p>
            <strong>Email:</strong>
          <%= current_user.email %>
          </p>


          <p>
          <% if (current_user.phone_number.present? ) %>
            <strong>Phone:</strong>
          <%= current_user.phone_number %>
          </p>
          <% end %>
        </div>
        <br>
      <div class="calendar">
          <h1>My Major(s)</h1>
          <div class="underline-red"></div>
          <%= current_user.biographical_information %>
      </div>
    </div><!--col-md-4-->
  </div><!--row-->



<div class="calendar3">
   <h1>My Connections</h1>
   <div class="underline-purple"></div>

  <br>

<table class= "table table-responsive">
  <thead>
    <tr>
      <th>Position</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @claim_opportunity.each do |claim_opportunity| %>
      <tr>
        <td><%= claim_opportunity.volunteer_opportunity.Organization %></td>
        <td><%= claim_opportunity.volunteer_opportunity.Address %></td>
        <td><%= claim_opportunity.volunteer_opportunity.Phone %></td>
        <td><%= claim_opportunity.volunteer_opportunity.Website %></td>
        <td><%= link_to 'View', claim_opportunity.volunteer_opportunity, class: "btn btn-success" %> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<br>
</div>



