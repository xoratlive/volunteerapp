<div class="container-fluid organization-profile">
<%= form_for([@volunteer_opportunity, @claim_opportunity]) do |f| %>



  <div class="form-group">
    <%= f.label :please_explain_why_you_are_interested_in_this_opportunity, "Share why you want to volunteer for this opportunity" %><br>
    <%= f.text_area :please_explain_why_you_are_interested_in_this_opportunity, cols: "30", rows: "3", class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "Volunteer!", class: "btn btn-success" %>
  </div>
<% end %>
</div>





