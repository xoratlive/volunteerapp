
<div class="calendar">
   <h1>Connections you have posted that volunteers have claimed</h1>
   <div class="underline-purple"></div>
  <br>


<table class= "table table-responsive">
  <thead>
    <tr>
      <th>Position</th>
      <th>Name</th>
      <th>About Me</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @claim_opportunity.each do |claim_opportunity| %>
      <tr>
        <td><%= claim_opportunity.volunteer_opportunity.Organization %></td>
        <td><%= claim_opportunity.volunteer.name  %></td>
        <td><%= claim_opportunity.please_explain_why_you_are_interested_in_this_opportunity  %></td>
        <td><a href="mailto:<%= claim_opportunity.volunteer.email  %>?subject=<%= current_user.name %> wants to connect with you!&body=Hello <%= claim_opportunity.volunteer.name  %>, if you are interested in volunteering for the <%= claim_opportunity.volunteer_opportunity.Organization %> position, please let us know! ">Contact <%= claim_opportunity.volunteer.name  %></a></td>
        

      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>



