<div class="container">

<h1>Connections you posted that volunteers have claimed</h1>


<table class= "table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Position</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @claim_opportunity.each do |claim_opportunity| %>
      <tr>
        <td><%= claim_opportunity.volunteer.name  %></td>
        <td><%= claim_opportunity.volunteer_opportunity.Organization %></td>
        <td><%= claim_opportunity.volunteer.phone_number  %></td>
        <td><%= claim_opportunity.volunteer.email  %></td>
        
        

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
<%= link_to 'New Volunteer opportunity', new_volunteer_opportunity_path, class: "btn btn-success" %>
<br>
<br>
<% end %>
</div>

