
<%= devise_error_messages! %>
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<script>
jQuery(document).ready(function(){
    jQuery('#hideshow').on('click', function(event) {        
         jQuery('#content').toggle('show');
         jQuery('#content2').toggle('show');
    });
});

jQuery(document).ready(function(){
jQuery('#content2').hide(1);
});


function change()
{
    var elem = document.getElementById("hideshow");
    if (elem.value=="Edit profile") elem.value = "Change password";
    else elem.value = "Edit profile";
}
</script>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
  

  <div id=content>
   <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>
  

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
 <div class="field">
  <% if (user_signed_in?) && (not current_user.volunteer?) %>
 
    <%= f.label :our_mission %><br />
    <% else %>
    <%= f.label :tell_us_about_your_causes %><br />
    <% end %>
    <%= f.text_field :biographical_information, autofocus: true, class: "form-control" %>
  </div>
 <div class="field">
  <% if (user_signed_in?) && (not current_user.volunteer?) %>
 
    <%= f.label :tell_us_about_your_organization %><br />
    <% else %>
    <%= f.label :tell_us_what_you_are_passionate_about %><br />
    <% end %>
    <%= f.text_field :about1, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :website %><br />
    <%= f.text_field :website, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :phone_number %><br />
    <%= f.telephone_field :phone_number, autofocus: true, maxlength: 10, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image, autofocus: true, class: "form-control" %>
  </div>
  </div>
  <div id=content2>
<div class="field">
    <%= f.label :password %> <i>(must be at least 6 characters)</i><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

</div>
</div>
<div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
</div>




  <div class="actions">

    <%= f.submit "Update Account", class: "btn btn-success" %>
  </div>
<% end %>

<input type='button' onclick="change()" id='hideshow' value='Change Password' class='btn btn-success' >

